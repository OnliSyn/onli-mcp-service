{
  "name": "onli-kb-mcp",
  "version": "0.1.0",
  "description": "Minimal MCP server for the Onli Knowledge Base",
  "capabilities": {
    "tools": true,
    "resources": false
  },
  "tools": [
    {
      "name": "kb.search",
      "description": "Full-text search over the Onli KB; returns ranked passages with section ids.",
      "input_schema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string"
          },
          "limit": {
            "type": "integer",
            "default": 5
          }
        },
        "required": [
          "query"
        ]
      }
    },
    {
      "name": "kb.answer",
      "description": "Answer a question using the KB with inline citations to section ids.",
      "input_schema": {
        "type": "object",
        "properties": {
          "question": {
            "type": "string"
          },
          "limit": {
            "type": "integer",
            "default": 6
          }
        },
        "required": [
          "question"
        ]
      }
    }
  ],
  "command": {
    "node": "dist/server.js"
  }
}